# ========================================
# Oral Health Monitoring System - Environment Config
# Usage: Copy this file to .env and update values
# ========================================

# ========================================
# Application Settings
# ========================================
APP_NAME=OralHealthMonitor
APP_VERSION=1.0.0
DEBUG=false
API_PREFIX=/api/v1

# ========================================
# Database Configuration (PostgreSQL)
# ========================================
DB_HOST=localhost
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=your-database-password-here
DB_NAME=oral_health_db

# ========================================
# Data Storage Paths
# ========================================
# Root directory for A/B/C data streams.
# Leave empty to use default './data' inside project root.
DATA_ROOT=

# ========================================
# Video Processing Constraints
# ========================================
MAX_VIDEO_SIZE_MB=100
MAX_VIDEO_DURATION_SEC=30
MAX_KEYFRAMES=25
MIN_KEYFRAMES=5

# Keyframe Extraction Algorithm Params
UNIFORM_SAMPLE_COUNT=20
PRIORITY_FRAME_THRESHOLD=0.5
KEYFRAME_QUALITY=85

# ========================================
# LLM Service (Aliyun Qianwen)
# ========================================
# REQUIRED: Your Qwen API Key from Aliyun DashScope
QIANWEN_API_KEY=your-qianwen-api-key-here

# Model Settings
QIANWEN_VISION_MODEL=qwen-vl-max
QIANWEN_TEXT_MODEL=qwen-max
QIANWEN_API_BASE=https://dashscope.aliyuncs.com/api/v1

# API Client Settings
QIANWEN_TIMEOUT=30
QIANWEN_MAX_RETRIES=3

# ========================================
# Security & Auth (JWT)
# ========================================
# WARNING: Change this secret key in production!
JWT_SECRET_KEY=your-secret-key-change-in-production
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24

# ========================================
# CORS Settings
# ========================================
# Allow origins (comma separated). Use * for all (dev only).
CORS_ORIGINS=*

# ========================================
# Logging Configuration
# ========================================
# Levels: DEBUG, INFO, WARNING, ERROR
LOG_LEVEL=INFO
# Path to log file (leave empty for console output only)
LOG_FILE=